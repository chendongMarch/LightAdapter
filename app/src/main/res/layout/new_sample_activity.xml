<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.zfy.adapter.decoration.LxSlidingSelectLayout
        android:layout_width="match_parent"
        android:id="@+id/select_layout"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/content_rv"
            android:layout_height="match_parent" />


    </com.zfy.adapter.decoration.LxSlidingSelectLayout>


    <FrameLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:minHeight="120dp"
        android:id="@+id/fix_container"
        android:layout_height="wrap_content" />


    <LinearLayout
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/add_header_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加个头" />

        <Button
            android:id="@+id/add_footer_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加个尾" />

        <Button
            android:id="@+id/empty_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空载" />

        <Button
            android:id="@+id/test_load_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载更多" />

        <Button
            android:id="@+id/test_select_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择器" />


        <Button
            android:id="@+id/test_drag_swipe_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拖拽/侧滑" />

        <Button
            android:id="@+id/test_expandable_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分组列表" />

        <Button
            android:id="@+id/test_pager_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ViewPager" />


        <Button
            android:id="@+id/test_img_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片混合" />


        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#f00"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="拖拽、侧滑"
            android:background="#0f0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/debug_tv" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>